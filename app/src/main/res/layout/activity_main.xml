<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_list">


        <TextView
            android:id="@+id/textMainTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lentaTitle"
            android:textSize="48sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="50dp"/>

        <ImageView
            android:id="@+id/imageMainIV"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/lenta"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/beginBuyBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beginBuy"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>